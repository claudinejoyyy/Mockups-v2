<script type="text/javascript">
$(function () {
 $("#example1").DataTable();
 $('#example2').DataTable({
   "paging": true,
   "lengthChange": true,
   "searching": true,
   "ordering": true,
   "info": true,
   "autoWidth": true
 });
});

function showAppointmentForm() {
  document.getElementById("showAppointmentForm").style.display = "block";
}

</script>
