  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Outpatient
        <small>List of Outpatients</small>
      </h1>
<!--
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
        <li class="active">Here</li>
      </ol>
-->
    </section>

    <!-- Main content -->
    <section class="content">

       <div class="row">
        <div class="col-xs-12">
          <!-- /.box -->

          <div class="box">
<!--
            <div class="box-header">
              <button type="button" class="btn btn-default btn-sm" data-toggle="modal" data-target="#myModal"><i class="fa fa-plus"></i> Add New Patient</button>
            </div>
-->
            <!-- /.box-header -->
            <div class="box-body">
              <table id="example1" class="table table-bordered table-striped">
                <thead>
                  <tr>
                    <th>Patient Type</th>
                    <th>Name</th>
                    <th>Age</th>
                    <th>Gender</th>
                    <th>Vital Signs</th>
                    <th>Initial Assessment</th>
                    <th>Bed</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <%for (var i = 0; i < opdInfo.length; i++) {%>
                  <tr>
                      <td><%=opdInfo[i].patient_type%></td>
                      <td><%=opdInfo[i].name%></td>
                      <td><%=opdInfo[i].age%></td>
                      <td><%=opdInfo[i].sex%></td>
                      <td style="font-size:10px;">
                        <%
                          var vitals = opdInfo[i].vital_signs.split('\n');
                          for(var l=0; l < 7; l++){ %>
                            <%=vitals[l]%><br>
                        <%}%>
                      </td>
                      <td><%=opdInfo[i].assessment%></td>
                      <%
                      var bedArr= '';
                        for (var j = 0; j < whoCurrentlyAdmittedV2.length; j++){
                          bedArr += whoCurrentlyAdmittedV2[j].patient_id;
                        }
                      if(bedArr.includes(opdInfo[i].patient_id)){%>
                        <td><%= whoCurrentlyAdmittedV2[i].bed_id%><a href="/doctor/bedManagement?bed_id=<%=whoCurrentlyAdmittedV2[i].bed_id%>" style="font-size:10px;">-details</a></td>
                      <%} else {%>
                        <td></td>
                      <%}%>

                      <td>
                        <!-- VIEW -->
                        <a href="../doctor/patientManagement?patient=<%=opdInfo[i].patient_id%>"><button class="btn btn-primary btn-sm" name="view">View</button></a>
                        <!-- LAB -->
                        <%
                        var labArr= '';
                          for (var j = 0; j < labSQL.length; j++){
                            labArr += labSQL[j].patient_id;
                          }
                        if(labArr.includes(opdInfo[i].patient_id)){%>
                          <a data-toggle="modal">
                            <input class="btn btn-primary btn-sm" type="button" value="Lab Request" name="lab_request" style="color:blue" data-toggle="modal" data-target="#labRequest2" onclick="ShowLabRequest2(<%=opdInfo[i].patient_id%>,<%=JSON.stringify(opdInfo[i].name)%>)">
                          </a>
                        <%} else {%>
                          <a data-toggle="modal">
                            <input class="btn btn-primary btn-sm" type="button" value="Lab Request" name="lab_request" data-toggle="modal" data-target="#labRequest" onclick="ShowLabRequest(<%=opdInfo[i].patient_id%>,<%=JSON.stringify(opdInfo[i].name)%>)">
                          </a>
                        <%}%>
                        <!-- PRESCRIPTION -->
                        <%
                        var prescribeArr= '';
                          for (var j = 0; j < prescribeSQL.length; j++){
                            prescribeArr += prescribeSQL[j].patient_id;
                          }
                        if(prescribeArr.includes(opdInfo[i].patient_id)){%>
                          <input class="btn btn-primary btn-sm" type="button" name="prescribe" style="color:blue" value="Prescription" data-toggle="modal" data-target="prescribe2" onclick="ShowPrescribe2(<%=opdInfo[i].patient_id%>,<%=JSON.stringify(opdInfo[i].name)%>)" >
                        <%} else {%>
                          <input class="btn btn-primary btn-sm" type="button" name="prescribe" value="Prescription" data-toggle="modal" data-target="#prescribe" onclick="ShowPrescribe(<%=opdInfo[i].patient_id%>,<%=JSON.stringify(opdInfo[i].name)%>)">
                        <%}%>
                        <!-- DIAGNOSIS -->
                        <button class="btn btn-primary btn-sm" class="btn btn-primary btn-sm" name="button" data-toggle="modal" data-target="#diagnosis" onclick="ShowDiagnosis(<%=opdInfo[i].patient_id%>,<%=JSON.stringify(opdInfo[i].name)%>)">Diagnosis</button>
                        <!-- ADMIT -->
                        <% var arr= '';
                          for (var j = 0; j < whoCurrentlyAdmittedV2.length; j++){
                            arr += whoCurrentlyAdmittedV2[j].patient_id;
                          } if(!(arr.includes(opdInfo[i].patient_id))){%>
                            <input class="btn btn-primary btn-sm" type="button" name="dmit" value="admit" data-toggle="modal" data-target="#admit" onclick="ShowAdmit(<%=opdInfo[i].patient_id%>,<%=JSON.stringify(opdInfo[i].name)%>)">
                        <%}%>
                        <!-- LAB REQUEST TABLE VIEW -->

                      </td>
                  </tr>
                <%}%>
              </table>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>

      <!-- LAB REQUEST -->
      <div class="modal fade" id="labRequest" role="dialog" aria-labelledby="labRequestlabel">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="labRequestlabel">Lab Request</h4>
            </div>
            <div class="modal-body">
              <div>
                <form class="form-horizontal" id="dynamicPatientIdForLab" method="post">
                  <label for="testRequest" class="col-sm-2 control-label">Test Type:</label>
                  <div class="col-sm-10">
                    <select class="form-control" name="testRequest">
                      <option value="bloodChemistry">Blood Chemistry</option>
                      <option value="hermatology">Hematology</option>
                      <option value="microscopy">Microscopy</option>
                      <option value="parasitology">Parasitology</option>
                      <option value="serotology">Serotology</option>
                      <option value="microbiology">Microbiology</option>
                      <option value="xRay">X-Ray</option>
                    </select>
                  </div>
                  <br>
                  <br>
                  <textarea name="labRequestremarks" class="form-control" rows="8" cols="80"></textarea>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary" name="sub" value="labRequest">Send</button>
                  </div>
                </form>
              </div>

            </div>

          </div>

        </div>

      </div>


      <!-- ADMIT  -->
      <div class="modal fade" id="admit" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <h4 class="modal-title" id="myModalLabel">Admission</h4>
            </div>
            <div class="modal-body">
              <form id="dynamicPatientIdForAdmit" class="form-horizontal" method="post" onsubmit="successAlert()">
                <div class="form-group">
                  <label for="quantity" class="col-sm-2 control-label">Available Beds:</label>
                  <div class="col-sm-10">
                    <select name="bedNumber">
                      <%for (var i = 0; i < admitAvailableBeds.length; i++) { %>
                        <option value="<%= admitAvailableBeds[i].bed_id%>"><%= admitAvailableBeds[i].bed_id%></option>
                      <%}%>
                    </select>
                  </div>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                  <button type="submit" class="btn btn-primary" name="sub" value="admit">Admit</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <!-- PRESCRIBE -->
      <div class="modal fade" id="prescribe" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <h4 class="modal-title" id="myModalLabel">Add Prescription</h4>
            </div>
            <div class="modal-body">
              <form id="dynamicPatientIdForPrescribe" class="form-horizontal" method="post" onsubmit="successAlert()">
                <div class="form-group">
                  <label for="medicine" class="col-sm-2 control-label">Medicine</label>
                  <div class="col-sm-10">
                    <input type="text" class="form-control" id="medicine" name="medicine">
                  </div>
                </div>

                <div class="form-group">
                  <label for="quantity" class="col-sm-2 control-label">Quantity</label>
                  <div class="col-sm-10">
                    <input type="text" class="form-control" id="quantity" name="quantity">
                  </div>
                </div>

                <div class="form-group">
                  <label for="dosage" class="col-sm-2 control-label">Dosage</label>
                  <div class="col-sm-10">
                    <input type="text" class="form-control" id="dosage" name="dosage">
                  </div>
                </div>

                <div class="form-group">
                  <label for="timeframe" class="col-sm-2 control-label">Timeframe</label>
                  <div class="col-sm-10">
                    <input type="text" class="form-control" id="timeframe" name="timeframe">
                  </div>
                </div>

                <div class="modal-footer">
                  <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                  <button type="submit" class="btn btn-primary" name="sub" value="prescribe">Add</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>

      <div class="modal fade" id="labRequest2" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <h4 class="modal-title" id="myModalLabel">Lab Request</h4>
            </div>
            <div class="modal-body">
              <form id="labViewPressed" class="form-horizontal" method="post" onsubmit="successAlert()">
                <label for="testRequest" class="col-sm-2 control-label">Test Type:</label>
                <div class="col-sm-10">
                  <select class="form-control" name="testRequest">
                    <option value="bloodChemistry">Blood Chemistry</option>
                    <option value="hermatology">Hematology</option>
                    <option value="microscopy">Microscopy</option>
                    <option value="parasitology">Parasitology</option>
                    <option value="serotology">Serotology</option>
                    <option value="microbiology">Microbiology</option>
                    <option value="xRay">X-Ray</option>
                  </select>
                </div>
                <br>
                <br>
                  <textarea name="labRequestremarks" class="form-control" rows="8" cols="80"></textarea>
                  <div class="modal-footer">
                    <a id="linkForLabView"><button id="labViewPressed" type="button" class="btn btn-default">View</button><a>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button id="labAdd" type="submit" class="btn btn-primary" name="sub" value="labRequest">Add</button>
                  </div>
              </form>
            </div>
          </div>
        </div>
      </div>

      <div id="prescribe2" style="display:none;">
          <a id="linkForPrescribeView"><button id="prescribeViewPressed">view</button></a>
          <button id="prescribeAdd">add</button>
      </div>

      <div class="modal fade" id="diagnosis" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <h4 class="modal-title" id="myModalLabel">Add Diagnosis</h4>
            </div>
            <div class="modal-body">
              <form id="linkDiagnosis" class="form-group" method="post" onsubmit="successAlert()">
                <textarea name="diagnosis" class="form-control" rows="8" cols="80"></textarea>
                <div class="modal-footer">
                  <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                  <button type="submit" class="btn btn-primary" name="sub" value="prescribe">Add</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>

    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

  <!-- Main Footer -->
  <footer class="main-footer">
    <div class="pull-right hidden-xs">
      <b>Version</b> 1
    </div>
    <strong>Copyright &copy; 2018.</strong> Philippine Military Academy | Fort Del Pilar Station Hospital | All rights reserved.
  </footer>
  <div class="control-sidebar-bg"></div>
</div>
