      <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper"  id="myDiv1"> <!------------------------------------ EDIT FOR LOADER ---------------------------------->
    <section class="content-header">
      <h1>
        Patient Management
        <small>List of Registered Patients</small>
      </h1>
    </section>

        <!-- Main content -->
    <section class="content animate-bottom"> <!------------------------------------ EDIT FOR LOADER ---------------------------------->
       <div class="row">
        <div class="col-xs-12">
          <div class="box">
            <div class="box-header">
          </div>
          <div class="box-body">
            <table id="example1" class="table table-bordered table-striped">
              <thead>
                <tr>
                  <th>Patient Type</th>
                  <th>Name</th>
                  <th>Age</th>
                  <th>Gender</th>
                  <th>Blood Type</th>
                  <th>Previous Medicine taken</th>
                  <th>Previous Confinement Period</th>
                  <th>Action</th>
                </tr>
              </thead>
              <%
              for(var i=0; i <p.length; i++){
                  var b = new Date(p[i].birth_date);
              %>
              <tr>
                <td><%= p[i].patient_type %></td>
                <td><%= p[i].name %></td>
                <td><%= p[i].age %></td>
                <td><%= p[i].sex %></td>
                <td><%= p[i].blood_type %></td>
                <td style="font-size:10px;">
                  <table class="table table-bordered table-striped">
                    <tr>
                      <th>Medicine</th>
                      <th>QTY</th>
                      <th>Dosage</th>
                      <th>Time Frame</th>
                    </tr>
                  <% if(p[i].medicine != null){
                    var medicine = p[i].medicine.split('\n');
                      for(var l=0; l < medicine.length-1; l++){ %>
                          <tr>
                            <%var parseMed = medicine[l].split(',');%>
                            <td><%= parseMed[0]%></td>
                            <td><%= parseMed[1]%></td>
                            <td><%= parseMed[2]%></td>
                            <td><%= parseMed[3]%></td>
                          </tr>
                    <%}
                  }%>
                  </table>
                </td>
                <td><%= p[i].allotment%> - <%= p[i].discharge%></td>

                <td>
                  <button type="button" class="btn btn-primary btn-sm" name="button" data-toggle="modal" data-target="#showInputPassword" onclick="PasswordInput(<%= p[i].patient_id %>)"><i class="fa fa-eye"></i> View</button>
                </td>
              </tr>
              <%}%>
            </table>
              <%if(p2){%>
                  <div class="row">
                    <div class="col-md-3">

                      <!-- Profile Image -->
                      <div class="box box-primary">
                        <div class="box-body box-profile">

                          <h3 class="profile-username text-center"><%= p2[0].name %></h3>

                          <h5 class="text-muted text-center"><%= p2[0].patient_type %></h5>

            <!--
                          <ul class="list-group list-group-unbordered">
                            <li class="list-group-item">
                              <b>Friends</b> <a class="pull-right">13,287</a>
                            </li>
                          </ul>
            -->

            <!--              <a href="#" class="btn btn-primary btn-block"><b>Follow</b></a>-->
                        </div>
                        <!-- /.box-body -->
                      </div>
                      <!-- /.box -->

                      <!-- About Me Box -->
                      <div class="box box-primary">
                        <div class="box-header with-border">
                          <h3 class="box-title">Basic Profile</h3>
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body">
                        <strong><i class="fa fa-info margin-r-5"></i> Patient ID</strong>

                          <h5 class="text-muted"> <%= p2[0].patient_id %></h5>

                          <hr>
                          <strong><i class="fa fa-user-plus margin-r-5"></i> Age</strong>

                          <h5 class="text-muted"> <%= p2[0].age %></h5>

                          <hr>

                          <strong><i class="fa fa-user margin-r-5"></i> Sex</strong>

                          <h5 class="text-muted"> <%= p2[0].sex %></h5>

                          <hr>
                          <strong><i class="fa fa-eyedropper margin-r-5"></i> Blood Type</strong>

                          <h5> <%= p2[0].blood_type %></h5>
                        </div>
                        <!-- /.box-body -->
                      </div>

                      <div class="box box-primary">
                        <div class="box-header with-border">
                          <h3 class="box-title">Appointments</h3>
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body">
                        <strong><i class="fa fa-calendar"></i> Date</strong>

                          <h5 class="text-muted"> None</h5>

                          <hr>
                        </div>
                        <!-- /.box-body -->
                      </div>
                      <!-- /.box -->
                    </div>
                    <!-- /.col -->
                    <div class="col-md-9">
                      <div class="nav-tabs-custom">
                        <ul class="nav nav-tabs">
                          <li class="active"><a href="#settings" data-toggle="tab">Profile</a></li>
                          <li><a href="#medicalhistory" data-toggle="tab">Medical History</a></li>
                        </ul>
                        <div class="tab-content">
                          <div class="active tab-pane" id="settings">
                            <form class="form-horizontal">

                         <dl class="dl-horizontal">
                            <dt>Rank or Serial Number</dt>
                            <dd><%= p2[0].rankORsn %></dd>

                            <dt>Unit</dt>
                            <dd><%= p2[0].unit %></dd>

                            <dt>Status</dt>
                            <dd><%= p2[0].status %></dd>

                            <dt>Address</dt>
                            <dd><%= p2[0].address %></dd>

                            <dt>Religion</dt>
                            <dd><%= p2[0].religion %></dd>

                            <dt>Allegies</dt>
                            <dd><%= p2[0].allergies %></dd>

                            <dt>Father</dt>
                            <dd><%= p2[0].father %></dd>

                            <dt>Mother</dt>
                            <dd></dd>

                            <dt>Birth History</dt>
                            <dd><%= p2[0].birth_history %></dd>

                            <dt>Immunization</dt>
                            <dd><%= p2[0].immunization %></dd>

                            <dt>Family History</dt>
                            <dd><%= p2[0].family_history %></dd>

                            <dt>Medicine</dt>
                            <dd><%= medicine%></dd>                 
                          </dl>

                              <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-10">
                                  <button type="submit" class="btn btn-danger">Save</button>
                                </div>
                              </div>
                            </form>
                          </div>

                          <div class="tab-pane" id="medicalhistory">
                            <div class="body-body">
                              <table id="medhist" class="table table-striped">
                                <thead>
                                  <tr>
                                    <th>Date</th>
                                    <th>Diagnosis</th>
                                    <th>Medicine</th>
                                    <th>Laboratory</th>
                                    <th>Bed No.</th>
                                  </tr>
                                </thead>
                                <tbody>
                              <%
                              for(var i=0; i <med.length; i++){
                              %>
                                  <tr>
                                      <td><%= med[i].diagnosis%></td>
                                      <td><%= med[i].medicine%></td>
                                      <td><%= med[i].lab%></td>
                                      <td><%= med[i].bed%></td>
                                  </tr>
                             <%}%>
                                </tbody>
                              </table>

                            </div>
                          </div>
                          <!-- /.tab-pane -->
                        </div>
                        <!-- /.tab-content -->
                      </div>
                      <!-- /.nav-tabs-custom -->
                    </div>
                    <!-- /.col -->
                  </div>

                <a href="/doctor/patientManagement" style="color:black"><button type="button" name="button">Back</button></a>

              <%}%>
                <%- messages('message', locals) %>
            </div>
          </div>
        </div>
      </div> <!--- div row --->
      </section>
      </div>

      <div class="modal fade modal-info" id="showInputPassword" role="dialog" aria-labelledby="labRequestlabel">
        <div class="modal-dialog modal-sm" role="document">
          <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="labRequestlabel"><%= username[0].name %>, please input your password.</h4>
            </div>
              <form id="dynamicActionPassword" method="post">
            <div class="modal-body">
              <div id="PasswordInput" style="display:none">
                  <input class="form-control" type="password" name="patientPassword" placeholder="Password">
              </div>
              </div>
              <div class="modal-footer">
                <button type="submit" name="sub" class="btn btn-outline" value="pass"><i class="fa fa-sign-in"></i> Enter</button>
              </div>
                </form>
            </div>
          </div>
      <div class="control-sidebar-bg"></div>
    </div>
      <% include ../partials/footer.ejs %>

<style>
  form-group,p{
    font-size: 20px;
  }

  label{
    font-size: 20px;
  }

</style>

<script src="/notif-doctor.js"></script>
<script type="text/javascript">
  $(function () {
    $("#example1").DataTable();
    $("#example2").DataTable();
  });

  <%if(invalid){%>
  alert('invalid password');
  $(document).ready(function(){
    $("#PasswordInput").show();
  });
<%}%>
  function PasswordInput(id){
    document.getElementById('PasswordInput').style.display = 'block';
    document.getElementById('dynamicActionPassword').action = '/doctor/patientManagement?passPatient='+id+'';
  }
</script>
