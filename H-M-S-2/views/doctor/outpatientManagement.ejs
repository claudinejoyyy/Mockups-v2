            </form>
        </tr>
      <%}%>
    </table>

    <!-- CONFIRMED -->
    <h1>CONFIRMED</h1>
    <table>
      <tr>
        <th>patient type</th>
        <th>name</th>
        <th>age</th>
        <th>gender</th>
        <th>Vital Signs</th>
        <th>initial Assessment</th>
        <th>status</th>
      </tr>
      <%for (var i = 0; i < opdInfo1.length; i++) {%>
        <tr>
            <td><%=opdInfo1[i].patient_type%></td>
            <td><%=opdInfo1[i].name%></td>
            <td><%=opdInfo1[i].age%></td>
            <td><%=opdInfo1[i].sex%></td>
            <td style="font-size:10px;">
              <%
                var vitals = opdInfo1[i].vitals.split('\n');
                for(var l=0; l < 7; l++){ %>
                  <%=vitals[l]%><br>
              <%}%>
            </td>
            <td><%=opdInfo1[i].initial_assessment%></td>
            <td>confirmed</td>
            <%}%>
