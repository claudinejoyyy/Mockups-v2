                  prescribeArr += prescribeSQL[j].patient_id;
                }
              if(prescribeArr.includes(opdInfo2[i].patient_id)){%>
                <input type="button" name="prescribe" style="color:blue" value="Prescription" onclick="ShowPrescribe2(<%=opdInfo2[i].patient_id%>,<%=JSON.stringify(opdInfo2[i].name)%>,<%=opdInfo2[i].histo_id%>)">
              <%} else {%>
                <input type="button" name="prescribe" value="Prescription" onclick="ShowPrescribe(<%=opdInfo2[i].patient_id%>,<%=JSON.stringify(opdInfo2[i].name)%>,<%=opdInfo2[i].histo_id%>)">
