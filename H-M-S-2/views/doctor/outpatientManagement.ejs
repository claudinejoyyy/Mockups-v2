        <th>name</th>
        <th>age</th>
        <th>gender</th>
        <th>Vital Signs</th>
        <th>initial Assessment</th>
        <th>bed</th>
        <th>action</th>
        <th>status</th>
      </tr>
      <%for (var i = 0; i < opdInfo2.length; i++) {%>
