<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Bed Management</title>
  </head>
  <body>
    <nav>
      <a href="../admin/dashboard">dashboard</a><br>
      <a href="../admin/patientManagement">patientManagement</a><br>
      <a href="../admin/bedManagement">bedManagement</a><br>
      <a href="../admin/userAccountsManagement">userAccountsManagement</a><br>
      <a href="../admin/profileManagement">profile</a>
    </nav>
    <table>
      <tr>
        <th>Bed Number</th>
        <th>patient Type</th>
        <th>Patient Name</th>
        <th>Status</th>
        <th>Confinement Date</th>
      </tr>

      <%for(var i=0; i < bedDetails.length; i++){%>
      <tralign="center">
        <td><%= bedDetails[i].bed_id%></td>
        <td><%= bedDetails[i].patient_type%></td>
        <td><%= bedDetails[i].name%></td>
        <td><%= bedDetails[i].status%></td>
        <%
        var DT = moment(bedDetails[i].allotment_timestamp).format('YYYY-MM-DD HH:mm:ss');
        if(DT == 'Invalid date'){%>
          <td></td>
        <%} else {%>
          <td><%= DT%></td>
        <%}%>
      </tr>
      <%}%>
    </table>
  </body>
</html>
